@model List<exercise_planner.Models.DbModels.Plan>

@{
    ViewBag.Title = "View All Plans";
}

<h2>View All Plans</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Plan ID</th>
                <th>User</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var plan in Model)
            {
                <tr>
                    <td>@plan.PlanId</td>
                    <td>@($"{plan.Users.Name} {plan.Users.Surname}")</td>
                    <td>
                        @Html.ActionLink("Details", "Details", "Plan", new { id = plan.PlanId }, new { @class = "btn btn-primary" })
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Plan", new { id = plan.PlanId }, new { @class = "btn btn-primary" })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", "Plan", new { id = plan.PlanId }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete this plan?');" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No plans found.</p>
}

<div>
    @Html.ActionLink("Create New Plan", "Create", "Plan", null, new { @class = "btn btn-primary" })
</div>
